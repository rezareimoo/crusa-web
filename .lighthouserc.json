{
  "ci": {
    "collect": {
      "url": ["${LHCI_URL}"],
      "startServerCommand": "echo 'skip'",
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--no-sandbox"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.3 }],
        "categories:accessibility": ["warn", { "minScore": 0.3 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "github": {
      "statusContext": "Lighthouse CI"
    }
  }
}
